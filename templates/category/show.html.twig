{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <div class="col-6 offset-3">
        <h1>Catégorie {{ category.name }}</h1>

        <table class="table table-bordered table-hover table-warning">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex flex-row justify-content-between">
            <a href="{{ path('category_index') }}" class="btn btn-warning">Retour à la liste</a>
            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-dark">Modifier</a>
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
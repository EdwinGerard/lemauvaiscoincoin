{% extends 'base.html.twig' %}

{% block title %}Département {{ department.code }}{% endblock %}

{% block body %}
    <div class="col-6 offset-3">
        <h1>Département {{ department.code }}</h1>

        <table class="table table-bordered table-hover table-warning">
            <tbody>
                <tr>
                    <th>Code</th>
                    <td>{{ department.code }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ department.name }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex flex-row justify-content-between">
            <a href="{{ path('department_index') }}" class="btn btn-warning">Retour à la liste</a>
            <a href="{{ path('department_edit', {'id': department.id}) }}" class="btn btn-dark">Modifier</a>
            {{ include('department/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
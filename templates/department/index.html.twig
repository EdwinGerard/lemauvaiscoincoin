{% extends 'base.html.twig' %}

{% block title %}Liste des départements{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 offset-3">
            <h1>Liste des départements</h1>

            <table class="table table-bordered table-hover table-warning">
                <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for department in departments %}
                    <tr>
                        <td>{{ department.code }}</td>
                        <td>{{ department.name }}</td>
                        <td>
                            <a href="{{ path('department_show', {'id': department.id}) }}" class="btn btn-info">Voir</a>
                            <a href="{{ path('department_edit', {'id': department.id}) }}" class="btn btn-dark">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun département en base</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('department_new') }}" class="btn btn-primary">Créer</a>
        </div>
    </div>
{% endblock %}
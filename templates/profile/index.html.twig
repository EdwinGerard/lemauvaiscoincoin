{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('build/css/account.css') }}">{% endblock %}

{% block body %}
    <div class="account-block mt-5 text-center">
        <h1>Mon Compte</h1>
        <div class="row">
            <div class="col-6">
                <h2>Mes données</h2>
                <p>Avatar: <img src="{{ asset('uploads/avatars/'~user.avatar) }}" class="rounded-circle" alt="user_avatar"></p>
                <p>Prénom: {{ user.firstName }}</p>
                <p>Nom: {{ user.lastName }}</p>
                <p>Nom d'utilisateur: {{ user.userName }}</p>
                <p>Courriel: {{ user.email }}</p>
            </div>
            <div class="col-6">
                <h2>Mes produits</h2>
                <div class="list-group">
                {% for product in user.products %}
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="list-group-item list-group-item-action">{{ product.name }}</a>
                {% endfor %}
                </div>
            </div>
        <div class="row">
            <div class="col-1 offset-11">
                <div class="duckProfile"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% if pagination.nbPages > 0 %}
    <ul class="pagination">
        {% if pagination.page > 1 %}
            <li class="page-item">
                <a href="{{ path(pagination.nomRoute, pagination.paramsRoute|merge({'page': 1})) }}" class="page-link">
                    <<
                </a>
            </li>
            <li class="ml-2 mr-2 page-item">
                <a href="{{ path(pagination.nomRoute,
                    pagination.paramsRoute|merge({'page': pagination.page-1})) }}" class="page-link">
                    <
                </a>
            </li>
        {% endif %}

        {# Affichage de toutes les pages entre p-4 et p+4 sauf si < 1 ou > nbPages #}
        {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}
            <li {% if p == pagination.page %}class="active page-item"{% endif %}>
                <a href="{{ path(pagination.nomRoute, pagination.paramsRoute|merge({'page': p})) }}" class="ml-2 mr-2 page-link">
                    {{ p }}
                </a>
            </li>
        {% endfor %}

        {% if pagination.page < pagination.nbPages %}
            <li class="ml-2 mr-2 page-item">
                <a href="{{ path(pagination.nomRoute,
                    pagination.paramsRoute|merge({'page': pagination.page+1})) }}" class="page-link">
                    >
                </a>
            </li>
            <li class="page-item">
                <a href="{{ path(pagination.nomRoute,
                    pagination.paramsRoute|merge({'page': pagination.nbPages})) }}" class="page-link">
                    >>
                </a>
            </li>
        {% endif %}
    </ul>
{% endif %}